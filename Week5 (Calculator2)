import java.util.Scanner;
public class Calculator2
{
public static void main (String args [])
{


Scanner userInput = new Scanner(System.in);


String conversion;
double number1, number2, answer = 0;


System.out.println("Enter first number:");
number1 = userInput.nextDouble();

System.out.println("Enter conversion:");
conversion = userInput.next();

System.out.println("Enter second number:");
number2 = userInput.nextDouble();


if (conversion.equals ("+"))
{
answer = number1 + number2;
}

else if (conversion.equals ("-"))
{
answer = number1 - number2;
}

else if (conversion.equals ("*"))
{
answer = number1 * number2;
}

else if (conversion.equals ("/"))
{
answer = number1 / number2;
}


System.out.print(number1);
System.out.print(" " + conversion);
System.out.print(" " + number2);
System.out.print(" = " + answer);
}
}
